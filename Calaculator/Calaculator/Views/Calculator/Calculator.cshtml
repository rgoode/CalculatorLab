        <button onclick = "@Model.MultiplyInput(@Model.EntryOne, @Model.EntryTwo)">Multiply</button>
        <button onclick = "@Model.DivideInput(@Model.EntryOne, @Model.EntryTwo)">Divide</button>*@



        <div class = "Total">
            <h2>Your Total Is:@Model.TotalNumber</h2>
        </div>

        <div class ="Reset">
            <button type = "reset">Reset Calculation</button>
        </div>


     </form> 

</div>



