@{
    ViewData["Title"] = "Home Page";
}

<div class = "header">
    <h1>Calculator App</h1>
</div>

<div class = "inputAddForm">
    <form asp-controller = "Calculator" asp-action = "Calculator">
        <label asp-for = "EntryOne">Enter First Number</label>
        <input asp-for = "EntryOne" />

        <label asp-for = "EntryTwo">Enter Second Number</label>
        <input asp-for = "EntryTwo" />

        @Html.DropDownListFor(m => m.makecalculate, new SelectList(Enum.GetValues(typeof(MakeCalculate))))

        <div class = "submitButton">
            <button type = "submit">Calculate</button>
        </div>
       
        
